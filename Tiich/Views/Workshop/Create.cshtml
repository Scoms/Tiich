@model TiichDAL.Workshop

@{
    ViewBag.Title = "Proposer";
}



<div class="col-lg-10 col-lg-offset-1">
    <div class="well">
        <h1 >
            @Html.TextBox("Label", Model.Label, new { @class = "form-control", @placeholder = "Votre titre ici" })
        </h1>
    </div>
</div>
<!-- Content-->
<div class="col-lg-10 col-lg-offset-1">
    <div class="col-lg-8">
        <div class="well col-lg-12" style="height:100%;">
            <div class="col-lg-6">
                <div>
                    @Html.TextBox("location", Model.Location, new { @placeholder = "Nowhere" })
                    <p class="list-group-item">Date : @Html.TextBox("date", Model.Date, new { @class = "form-control", @placeholder = "Nowhere" })</p>
                    <p class="list-group-item">Heure : @Html.TextBox("heure", Model.Hour, new { @class = "form-control", @placeholder = "Nowhere" })</p>
                </div>
            </div>
            <div class="col-lg-6">
                <div id="map"></div>
                
            </div>
        </div>

        <div class="col-lg-5 well">
            <h3>Détails</h3>
        </div>

        <div class="col-lg-6 col-lg-offset-1 well">
            <h3>A prévoir</h3>
            <p>@Html.TextArea("equipement", Model.Equipement, new { @class = "form-control"})</p>
        </div>
    </div>
    <div class="col-lg-4" style="height:100%;">
        <div class="jumbotron">
            <h3>Participer</h3>
        </div>

        <div class="well" style="height:100%;">
            <h3>Bio</h3>
        </div>
    </div>
</div>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAN8_vIEFzgTRdFmsvTMovR9IS7ufIxWoA"></script>
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places"></script>
<script src="~/Scripts/Gmap.js"></script>
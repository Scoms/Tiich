@model TiichDAL.User

@using (Html.BeginForm("LogIn", "User", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-3 control-label">Email</label>
        <div class="col-sm-7">
            @Html.TextBox("email", Model.Email, new { @class = "form-control", @placeholder = "Email" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-3 control-label">Mot de passe</label>
        <div class="col-sm-7">
            @Html.TextBox("password", "", new { @class = "form-control", @placeholder = "Mot de passe", @type = "password" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-7">
            <div class="checkbox">
                <label>
                    @Html.CheckBox("rememberMe", false, new { @class = "" })
                    Se souvenir de moi
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-7">
            <button type="submit" class="btn btn-success">Se Connecter</button>
        </div>
    </div>
}